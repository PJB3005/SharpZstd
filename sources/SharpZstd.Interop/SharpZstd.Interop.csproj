<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp3.0;net5.0;net6.0;net7.0;net8.0</TargetFrameworks>
        <Nullable>enable</Nullable>
        <LangVersion>10</LangVersion>
        <PolySharpIncludeRuntimeSupportedAttributes>true</PolySharpIncludeRuntimeSupportedAttributes>
    </PropertyGroup>

    <PropertyGroup>
        <ZstdBinRoot>$(NativeAssetsPath)</ZstdBinRoot>
        <ZstdPackagedName>SharpZstd.Native</ZstdPackagedName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="PolySharp" Version="1.13.2">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="System.Memory" Version="4.5.5" />
    </ItemGroup>

    <ItemGroup>
        <_NativeAssetName Include="win-x86" Ext="dll" />
        <_NativeAssetName Include="win-x86" Ext="pdb" />
        <_NativeAssetName Include="win-x64" Ext="dll" />
        <_NativeAssetName Include="win-x64" Ext="pdb" />
        <_NativeAssetName Include="win-arm64" Ext="dll" />
        <_NativeAssetName Include="win-arm64" Ext="pdb" />
        <_NativeAssetName Include="linux-x64" Ext="so" />
        <_NativeAssetName Include="linux-arm64" Ext="so" />
        <_NativeAssetName Include="osx-x64" Ext="dylib" />
        <_NativeAssetName Include="osx-arm64" Ext="dylib" />

        <_NativeAssets Include="@(_NativeAssetName)" Triplet="%(Identity)" />

        <Content
            Include="@(_NativeAssets -> '$(NativeAssetsPath)/%(Identity)/bin/$(ZstdPackagedName).%(Ext)')"
            Pack="true" 
            Visible="false">
            <PackagePath Condition="'%(PackagePath)' == ''">runtimes/%(Triplet)/native</PackagePath>
        </Content>

    </ItemGroup>

</Project>