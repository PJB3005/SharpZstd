<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp3.0;net5.0</TargetFrameworks>
        <Nullable>enable</Nullable>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <PropertyGroup>
        <ZstdBinRoot>../../vcpkg_renamed_binaries</ZstdBinRoot>
        <ZstdPackagedName>SharpZstd.Native</ZstdPackagedName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="PolySharp" Version="1.13.2">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
        <PackageReference Include="System.Memory" Version="4.5.5" />
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).win-x64.dll" Visible="false">
            <PackagePath>runtimes/win-x64/native</PackagePath>
        </None>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).win-x64.pdb" Visible="false">
            <PackagePath>runtimes/win-x64/native</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).win-x86.dll" Visible="false">
            <PackagePath>runtimes/win-x86/native</PackagePath>
        </None>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).win-x86.pdb" Visible="false">
            <PackagePath>runtimes/win-x86/native</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).win-arm64.dll" Visible="false">
            <PackagePath>runtimes/win-arm64/native</PackagePath>
        </None>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).win-arm64.pdb" Visible="false">
            <PackagePath>runtimes/win-arm64/native</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).linux-x64.so" Visible="false">
            <PackagePath>runtimes/linux-x64/native</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).linux-arm64.so" Visible="false">
            <PackagePath>runtimes/linux-arm64/native</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).osx-x64.dylib" Visible="false">
            <PackagePath>runtimes/osx-x64/native</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Pack="true" Include="$(ZstdBinRoot)/$(ZstdPackagedName).osx-arm64.dylib" Visible="false">
            <PackagePath>runtimes/osx-arm64/native</PackagePath>
        </None>
    </ItemGroup>

</Project>
