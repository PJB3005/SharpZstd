<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>9</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <ZstdBinRoot>../../vcpkg_installed</ZstdBinRoot>
    <ZstdPackagedName>SharpZstd.Native</ZstdPackagedName>
    <ZstdOsxVersion>$(ZstdVersion)</ZstdOsxVersion>
    <ZstdLinuxVersion>$(ZstdVersion)</ZstdLinuxVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PolySharp" Version="1.12.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/x64-windows/bin/zstd.dll" Visible="false">
      <PackagePath>runtimes/win-x64/native/$(ZstdPackagedName).win-x64.dll</PackagePath>
    </None>
    <None Pack="true" Include="$(ZstdBinRoot)/x64-windows/bin/zstd.pdb" Visible="false">
      <PackagePath>runtimes/win-x64/native/$(ZstdPackagedName).win-x64.pdb</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/x86-windows/bin/zstd.dll" Visible="false">
      <PackagePath>runtimes/win-x86/native/$(ZstdPackagedName).win-x86.dll</PackagePath>
    </None>
    <None Pack="true" Include="$(ZstdBinRoot)/x86-windows/bin/zstd.pdb" Visible="false">
      <PackagePath>runtimes/win-x86/native/$(ZstdPackagedName).win-x86.pdb</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/arm64-windows/bin/zstd.dll" Visible="false">
      <PackagePath>runtimes/win-arm64/native/$(ZstdPackagedName).win-arm64.dll</PackagePath>
    </None>
    <None Pack="true" Include="$(ZstdBinRoot)/arm64-windows/bin/zstd.pdb" Visible="false">
      <PackagePath>runtimes/win-arm64/native/$(ZstdPackagedName).win-arm64.pdb</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/x64-linux/lib/libzstd.so.$(ZstdLinuxVersion)" Visible="false">
      <PackagePath>runtimes/linux-x64/native/$(ZstdPackagedName).linux-x64.so</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/arm64-linux/lib/libzstd.so.$(ZstdLinuxVersion)" Visible="false">
      <PackagePath>runtimes/linux-arm64/native/$(ZstdPackagedName).linux-arm64.so</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/x64-osx/lib/libzstd.$(ZstdOsxVersion).dylib" Visible="false">
      <PackagePath>runtimes/osx-x64/native/$(ZstdPackagedName).osx-x64.dylib</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Pack="true" Include="$(ZstdBinRoot)/arm64-osx/lib/libzstd.$(ZstdOsxVersion).dylib" Visible="false">
      <PackagePath>runtimes/osx-arm64/native/$(ZstdPackagedName).osx-arm64.dylib</PackagePath>
    </None>
  </ItemGroup>

</Project>
